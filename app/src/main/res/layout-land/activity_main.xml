<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/myTitle"
        android:layout_centerHorizontal="true"
        android:text="@string/my_factor_game"
        android:layout_width="wrap_content"
        android:textSize="30dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="@string/enter_the_number"
        android:textSize="23dp"
        android:id="@+id/myInputText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/myTitle"/>

    <EditText
        android:text=""
        android:id="@+id/myInputNumber"
        android:width="350dp"
        android:inputType="number"
        android:layout_above="@id/mySecond"
        android:layout_toStartOf="@id/myEnter"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/myEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myTitle"
        android:layout_alignParentRight="true"
        android:text="@string/enter"/>

    <Button
        android:text="@string/_1st"
        android:id="@+id/myFirst"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/myEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:text="@string/_2nd"
        android:id="@+id/mySecond"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/myFirst"
        android:layout_below="@id/myEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:text="@string/_3rd"
        android:id="@+id/myThird"
        android:layout_below="@+id/myEnter"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="@string/now_find_the_factor"
        android:textSize="23dp"
        android:id="@+id/myFake"
        android:layout_below="@id/mySecond"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/myFake2"
        android:textSize="28dp"
        android:layout_below="@+id/myFake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@+id/myFake2"
        android:textSize="25dp"
        android:id="@+id/myFinalAnswer"
        android:text="@string/correct_wrong"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="@string/best"
        android:id="@+id/myBest"
        android:textSize="20dp"
        android:layout_below="@+id/myFinalAnswer"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:text="@string/try_again"
        android:id="@+id/myTryAgain"
        android:layout_below="@+id/myBest"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="10"
        android:id="@+id/myTimer"
        android:textSize="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/myTryAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
